@using OdeToFood.Core.Entities
@model Restaurant

<div class="card mb-3">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        <a asp-page="./Detail"
           asp-route-restaurantId="@Model.Id"
           class="btn btn-lg"><i class="fa fa-search-plus"></i></a>
        <a asp-page="./Edit"
           asp-route-restaurantId="@Model.Id"
           class="btn btn-lg"><i class="fa fa-edit"></i></a>
        <a asp-page="./Delete"
           asp-route-restaurantId="@Model.Id"
           class="btn btn-lg"><i class="fa fa-trash"></i></a>
    </div>
</div>